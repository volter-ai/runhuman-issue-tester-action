{
  "name": "@runhuman/issue-tester-action",
  "version": "0.0.1",
  "description": "GitHub Action to test linked issues when PRs are merged using human QA",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "npm run compile && npm run bundle",
    "compile": "tsc",
    "bundle": "ncc build lib/main.js --source-map --license licenses.txt",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/volter-ai/runhuman.git",
    "directory": "packages/issue-tester-action"
  },
  "keywords": [
    "github-action",
    "qa",
    "testing",
    "human-in-the-loop",
    "ci-cd",
    "quality-assurance",
    "issue-testing",
    "pr-merge"
  ],
  "author": "RunHuman <runhuman@volter.ai>",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/graphql": "^8.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@vercel/ncc": "^0.38.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
